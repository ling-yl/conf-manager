<div class="w3-container">
    <div style="margin:0 5% 3%">
        <form action="/users/info" method="POST" name="" style="background:#f5f5f5; padding:1% 1%" onsubmit="">
            <div class="row" style="width: 100%; margin:0 auto;padding:1% 2%">
                <div class="col-sm">
                    <label>員工編號：</label>
                    <input type="text" class="form-control edit" id="" value="{{user.staffId}}" name="staffId" required
                        disabled>
                </div>
                <div class="col-sm">
                    <label for="">姓名：</label>
                    <input type="text" class="form-control" id="" value="{{name}}" name="name" required>
                </div>
            </div>
            <div class="row" style="width: 100%;margin: 0 auto;padding:1% 2%">
                <div class="col-sm" style="text-align: right">
                    <input type="submit" class="btn btn-primary" id="save-user-btn" value="修改">
                </div>
            </div>
        </form>
    </div>
</div>