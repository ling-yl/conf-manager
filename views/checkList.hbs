<div class="container" style="margin-top: 3%;">
    <div class="row">
        <div class="col">
            <label style="font-size: 20px; display: flex; align-items: center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-person-check-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm9.854-2.854a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                </svg>
                &nbsp;主持人簽核
            </label>
        </div>
    </div>
</div>

<div class="w3-container">
    <div>
        <div style="margin: 0 5%; text-align: center">
            <table class="table conf-table">
                <thead>
                    <tr>
                        <th scope="col">會議名稱</th>
                        <th scope="col">開始時間</th>
                        <th scope="col">結束時間</th>
                        <th scope="col">地點</th>
                        <th scope="col">主持人審核</th>
                        <th scope="col">場地審核</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- 遍歷待主持人簽核的會議陣列 --}}
                    {{#each chairConfs}}
                    <tr onclick="tableClick('{{this.confInfo._id}}')">
                        <td>{{this.confInfo.name}}</td>
                        <td>{{this.confInfo.startTime}}</td>
                        <td>{{this.confInfo.endTime}}</td>
                        <td>{{this.roomInfo.name}}</td>
                        <td>{{{getSign this.isSign}}}</td>
                        <td>{{{getSign this.confInfo.isRoomSign}}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
            {{!-- 判斷有無待簽核會議 --}}
            {{#if chairConfs}}
            {{else}}
            {{!-- 沒有會議 --}}
            目前沒有待審核會議
            {{/if}}
        </div>
    </div>
</div>


