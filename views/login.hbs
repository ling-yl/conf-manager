<div style=" text-align: center">
    <div style="">
        <div style="display: flex;justify-content:center; padding:2% 15%">
            <div class="information" style="width:40%;margin:1% 3%">
                <div style="padding: 3%">
                    <h1 style="margin:5% 0 0 0">Login</h1>
                    
                </div>
                {{!-- 顯示 flash 訊息 --}}
                {{> message }}
                <div>
                    {{!-- 登入資料輸入後端，判別會員資格 --}}
                    <form method="POST" action="/users/login">
                        <div style="padding: 2%">
                            <label>帳號</label>
                            <input class="form-control" type="text" id="account" name="staffId" required>
                        </div>
                        <div style="margin:1% 0;padding: 2%">
                            <label>密碼</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <div style="padding: 5% 2%">
                            <input class="form-control btn btn-primary" type="submit" value="登入">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>